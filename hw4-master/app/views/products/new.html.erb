<div class="page-header">
  <h1>Sell Your Stuff</h1>
</div>

<div class="row">
  <div class="col-sm-4">

  <%= form_tag("/products", method: 'post') do  %>

    <div class="form-group">
      <%= label_tag :title, "Product Title" %>
      <%= text_field_tag :title, "", autofocus: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= label_tag :photo_url, "Link to Image or Photo" %>
      <%= text_field_tag :photo_url, "", class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= label_tag :price, "Set Your Price" %>
      <%= text_field_tag :price, "12.50", class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= label_tag :description, "Describe the item you're trying to sell" %>
      <%= text_area_tag :description, "", rows: 5, class: 'form-control' %>
    </div>

    <%= submit_tag "Create Item", class: 'btn btn-success btn-lg'%>
    or
    <%= link_to "Cancel", "/products" %>

  <% end %>

  </div>
</div>
