<div class="page-header">
  <h1>Edit Listing #<%= params[:id] %></h1>
</div>

<div class="row">
  <div class="col-sm-4">

  <%= form_tag("/products/#{@product.id}", method: 'patch') do  %>

    <div class="form-group">
      <%= label_tag :title, "Product Title" %>
      <%= text_field_tag :title, @product.title, autofocus: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= label_tag :photo_url, "Link to Image or Photo" %>
      <%= text_field_tag :photo_url, @product.photo_url, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= label_tag :price, "Price" %>
      <%= number_field_tag :price, @product.price / 100.0, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= label_tag :description, "Describe the item you're trying to sell:" %>
      <%= text_area_tag :description, @product.description,
                        rows: 5, class: 'form-control' %>
    </div>

    <%= submit_tag "Update Item", class: 'btn btn-success btn-lg'%>
    or
    <%= link_to "Cancel", "/products/1" %>

  <% end %>

  </div>
</div>
